<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/superHeroImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/superHeroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/superHeroImage"
        tools:text="kdjgfs"/>

    <TextView
        android:id="@+id/superHeroRealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/superHeroName"
        app:layout_constraintStart_toEndOf="@+id/superHeroImage"
        tools:text="kdjgfs"/>

    <TextView
        android:id="@+id/superHeroPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/superHeroRealName"
        app:layout_constraintStart_toEndOf="@+id/superHeroImage"
        tools:text="kdjgfs"/>

</androidx.constraintlayout.widget.ConstraintLayout>